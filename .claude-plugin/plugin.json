{
  "name": "nanobanana-mcp",
  "version": "1.0.0",
  "description": "AI image generation and editing for Claude Code via Gemini. Generate, edit, and iteratively refine images using text prompts without leaving your terminal.",
  "author": {
    "name": "Dojo Coding Labs",
    "url": "https://github.com/DojoCodingLabs"
  },
  "homepage": "https://github.com/DojoCodingLabs/nanobanana-mcp#readme",
  "repository": "https://github.com/DojoCodingLabs/nanobanana-mcp",
  "license": "MIT",
  "keywords": [
    "claude-code",
    "claude-code-plugin",
    "mcp",
    "mcp-server",
    "image-generation",
    "gemini",
    "ai-images",
    "image-editing",
    "nanobanana",
    "dojo-coding"
  ],
  "mcpServers": {
    "nanobanana": {
      "command": "node",
      "args": ["${CLAUDE_PLUGIN_ROOT}/dist/index.js"],
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "NANOBANANA_MODEL": "${NANOBANANA_MODEL}"
      }
    }
  }
}
